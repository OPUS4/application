<?PHP if ($this->pageCount > 1) : ?>
<div class="paginationControl-wrapper">
    <ul class="paginationControl">

        <!-- First and previous page link -->
        <?php if (isset($this->previous)) : ?>
            <li><a class="pagination-first" href="<?= $this->url(['page' => $this->first]) ?>"
                   title="<?= $this->translate('pagination_first') ?>"></a></li>
            <li><a class="pagination-prev" href="<?= $this->url(['page' => $this->previous]) ?>"
                   title="<?= $this->translate('pagination_previous') ?>"></a></li>
        <?php else : ?>
            <li><div class="pagination-first"></div></li>
            <li><div class="pagination-prev"></div></li>
        <?php endif ?>

        <!-- Numbered page links -->
        <?php foreach ($this->pagesInRange as $page) : ?>
            <?php if ($page !== $this->current) : ?>
                <li><a href="<?= $this->url(['page' => $page]) ?>"><?= $page ?></a></li>
            <?php else : ?>
                <li class="currentPage"><?= $page ?></li>
            <?php endif ?>
        <?php endforeach ?>

        <!-- Next and last page link -->
        <?php if (isset($this->next)) : ?>
            <li><a class="pagination-next" href="<?= $this->url(['page' => $this->next]) ?>"
                   title="<?= $this->translate('pagination_next') ?>"></a></li>
            <li><a class="pagination-last" href="<?= $this->url(['page' => $this->last]) ?>"
                   title="<?= $this->translate('pagination_last') ?>"></a></li>
        <?php else : ?>
            <li><div class="pagination-next"></div></li>
            <li><div class="pagination-last"></div></li>
        <?php endif ?>
    </ul>
</div>
<?PHP endif ?>
