<?xml version="1.0"?>
<ruleset name="OPUS 4 coding standard">
    <rule ref="./vendor/zendframework/zend-coding-standard/ruleset.xml">
        <!-- TODO remove excludes after switch to ZF3 -->
        <exclude name="PSR1.Classes.ClassDeclaration.MissingNamespace" />
        <exclude name="Squiz.Classes.ValidClassName.NotCamelCaps" />
    </rule>
    <file>library</file>
    <file>modules</file>
    <file>scripts</file>
    <file>public</file>
    <file>db</file>
    <file>tests</file>
    <exclude-pattern>public/assets</exclude-pattern>
    <exclude-pattern>public/js</exclude-pattern>
</ruleset>