<?PHP $this->title = 'help_index_pagetitle' ?>

    <h2><?= $this->translate('help_index_title') ?></h2>

<?php if (isset($this->content)) : ?>
    <h2><?= $this->translate($this->contenttitle) ?></h2>
    <div class="content">
        <div id="section-help" class="section help">
        <?= $this->content ?>
        </div>
    </div>
<?php else : ?>
    <div class="content">
        <div id="section-help" class="section help">

        <?php $helpEntries = $this->help->getHelpEntries(); ?>

        <?php foreach ($helpEntries as $section => $entries) : ?>
            <h3><?= $this->translate($section) ?></h3>
            <ul class="nav help">
                <?php foreach ($entries as $entry) : ?>
                    <li>
                        <?php if (! $this->help->getSeparateViewEnabled()) : ?>
                            <a href="#<?= $entry; ?>">
                                <?= $this->translate('help_title_' . $entry) ?>
                            </a>
                        <?php else : ?>
                            <a href="<?= $this->url([
                                    'module' => 'home', 'controller' => 'index', 'action' => 'help',
                                    'content' => $entry
                                ], null, true) ?>">
                                <?= $this->translate('help_title_' . $entry) ?>
                            </a>
                        <?php endif ?>
                    </li>
                <?php endforeach; ?>
            </ul>
        <?php endforeach; ?>
        </div>

        <?php if (! $this->help->getSeparateViewEnabled()) : ?>
         <div class="section answers">
            <h2><?= $this->translate('help_index_answerstitle') ?></h2>
            <dl>
            <?php foreach ($helpEntries as $section => $entries) : ?>
                <?php foreach ($entries as $entry) : ?>
                    <dt id="<?= $entry ?>"><?= $this->translate("help_title_$entry") ?></dt>
                    <dd>
                        <div><?= $this->help->getContent($entry) ?></div>
                        <p class="backlink"><a href="#section-help"><?= $this->translate('help_index_up') ?></a></p>
                    </dd>
                <?php endforeach; ?>
            <?php endforeach; ?>
            </dl>
        </div>
        <?php endif ?>
    </div>
<?php endif ?>
