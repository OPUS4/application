<documenttype name="doctoral_thesis"
	xmlns="http://schemas.opus.org/documenttype"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<!-- general -->
	<field name="licence" multiplicity="*" languageoption="off"
		mandatory="yes" />
	<field name="language" multiplicity="*" languageoption="off"
		mandatory="yes" />


	<!-- dates -->
	<!-- either "completed_year" or "completed_date" must be mandatory -->
	<mandatory type="one-at-least">
		<field name="completed_year" languageoption="off" />
		<field name="completed_date" languageoption="off" />
	</mandatory>

	<!-- either "published_year" or "published_date" must be mandatory -->
	<mandatory type="one-at-least">
		<field name="published_year" languageoption="off" />
		<field name="published_date" languageoption="off" />
	</mandatory>

	<field name="date_accepted" languageoption="off" mandatory="yes" />

	<!-- identifiers -->
	<field name="identifier_isbn" languageoption="off" />

	<!-- institutes -->
	<field name="institute_name" languageoption="off" mandatory="yes" />
	<field name="non_institute_affiliation" languageoption="off" />

	<!-- persons -->
	<field name="person_advisor" languageoption="off" mandatory="yes" />
	<field name="person_author" languageoption="off" mandatory="yes" />
	<field name="person_other" languageoption="off" />
	<field name="person_referee" languageoption="off" />

	<!-- titles  -->
	<field name="title_abstract" multiplicity="*" mandatory="yes" />
	<field name="title_main" multiplicity="*" mandatory="yes" />
	<field name="title_parent" multiplicity="*" />

	<!-- subjects -->
	<field name="subject_swd" languageoption="off" mandatory="yes" />
	<field name="subject_ddc" languageoption="off" />
	<field name="subject_uncontrolled" languageoption="off"
		mandatory="yes" />

</documenttype>
