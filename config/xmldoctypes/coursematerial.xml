<documenttype name="coursematerial"
    xmlns="http://schemas.opus.org/documenttype"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://schemas.opus.org/documenttype https://svn.zib.de/opus4dev/framework/trunk/library/Opus/Document/documenttype.xsd">

    <field name="PersonSubmitter" required="yes" multiplicity="1" formelement="Text" datatype="Person" />
    <field name="Language" required="yes" formelement="Select" datatype="Language" multiplicity="1"/>
    <field name="TitleMain" required="yes" formelement="Text" datatype="Title" multiplicity="4" />
    <field name="TitleAbstract" required="no" formelement="Textarea" datatype="Title" multiplicity="4" >
        <required-if-fulltext />
    </field>
    <field name="TitleSub" required="no" formelement="Text" datatype="Title" multiplicity="1" />
    <field name="PersonAuthor" required="no" formelement="Text" datatype="Person" multiplicity="*" />
    <field name="PersonContributor" required="no" formelement="Text" datatype="Person" multiplicity="*" />
    <field name="CreatingCorporation" required="no" formelement="Text" datatype="Text" multiplicity="*" />
    <field name="ContributingCorporation" required="no" formelement="Text" datatype="Text" multiplicity="*"/>
    <field name="PageNumber" required="no" formelement="Text" datatype="Integer" multiplicity="1" />
    <field name="PageFirst" required="no" formelement="Text" datatype="Integer" multiplicity="1" />
    <field name="PageLast" required="no" formelement="Text" datatype="Integer" multiplicity="1" />
    <field name="SubjectSwd" required="no" formelement="Text" datatype="Text" multiplicity="5" />
    <field name="SubjectUncontrolled" required="no" formelement="Text" datatype="Text" multiplicity="5" />
    <field name="Institute" required="no" formelement="Select" datatype="Institute" multiplicity="1" />
    <field name="Collection" required="no" formelement="Text" datatype="Text" multiplicity="1" />
    <field name="CompletedYear" required="yes" formelement="Text" datatype="Year" multiplicity="1" />
    <field name="IdentifierUrn" required="no" formelement="Text" datatype="Text" multiplicity="1" />
    <field name="Note" required="no" formelement="Textarea" datatype="Text" multiplicity="1" />
    <field name="Licence" required="yes" formelement="Select" datatype="Licence" multiplicity="1" />
    <field name="ServerDateUnlocking" required="no" formelement="Text" datatype="Text" multiplicity="1" />
    
</documenttype>