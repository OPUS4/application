{
  "name": "opus4/server",
  "description": "Application Environment for Opus 4",
  "license": "GPL-2.0+",
  "require": {
    "php": ">=5.6",
    "ext-intl": "*",
    "ext-gd": "*",
    "ext-mcrypt": "*",
    "ext-mbstring": "*",
    "ext-pdo": "*",
    "ext-pdo_mysql": "*",
    "ext-curl": "*",
    "ext-xml": "*",
    "ext-zip": "*",
    "zendframework/zendframework1": "1.12.*",
    "jpgraph/jpgraph": "dev-master",
    "solarium/solarium": "3.4.1",
    "opus4-repo/framework": "dev-OPUSVIER-1049",
    "opus4-repo/opus4-doi": "4.6.2",
    "opus4-repo/search": "4.6.4.x-dev",
    "components/jquery": "1.12.4",
    "components/jqueryui": "1.12.1",
    "robloach/component-installer": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "4.8.*",
    "phpunit/dbunit": "~1.3",
    "phpunit/phpunit-story": "~1.0",
    "phpunit/phpunit-selenium": "~1.4",
    "phpunit/php-invoker": "~1.1",
    "phploc/phploc": "*",
    "phpdocumentor/phpdocumentor": "2.*",
    "phpmd/phpmd" : "2.4.3",
    "sebastian/phpcpd": "*",
    "mayflower/php-codebrowser": "~1.1",
    "squizlabs/php_codesniffer": "2.*",
    "opus4-repo/codesniffer": "dev-master",
    "zendframework/zend-coding-standard": "~1.0.0"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "component-dir": "public/assets"
  },
  "scripts": {
    "cs-check": "phpcs -n --extensions=php,phtml,css,js,inc",
    "cs-fix": "phpcbf --extensions=php,phtml,css,js,inc"
  }
}
